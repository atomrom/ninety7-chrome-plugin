{
  "manifest_version": 2,

  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.1.0",

  "default_locale": "en",

  "author": "Atomrom",
  
  "icons": {
  	"48" : "img/icon48.png",
  	"128": "img/icon128.png"
  },

  "permissions": [ 
    "tabs"
  ],
  
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["navigation_tracker.js"]
  },
  "content_scripts": [
    {      
      "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file:///*"],
      "js": ["content_extractor.js"]
    }
  ]
  
}